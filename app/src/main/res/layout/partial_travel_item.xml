<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/crdOrder"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/OrderItem"
    app:cardCornerRadius="@dimen/default_margin"
    app:cardElevation="@dimen/default_elevation">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="@dimen/default_margin"
            android:paddingBottom="@dimen/default_margin"
            android:paddingRight="@dimen/default_margin_2x"
            android:paddingLeft="@dimen/default_margin_2x"
            android:background="@color/label_back_gray"
            android:layout_marginBottom="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.befoys.core.persian.PersianTextView
                android:id="@+id/lblOrderName"
                android:text="نام سفارش در اینجا می آید"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content" />

            <com.befoys.core.persian.PersianTextView
                android:id="@+id/lblOrderDatetime"
                android:text="1398/10/10 13:20"
                android:textAlignment="textEnd"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            style="@style/OrderItemContent">

            <com.befoys.core.persian.PersianTextView
                android:id="@+id/lblOrderStatus"
                android:text="@string/label_travel_status"
                style="@style/WrapContent" />

            <com.befoys.core.persian.PersianTextView
                android:id="@+id/lblOrderCount"
                android:text="@string/label_travel_product_count"
                style="@style/WrapContent" />

        </LinearLayout>

        <View style="@style/LineDivider" />

        <LinearLayout
            style="@style/OrderItemContent">

            <com.befoys.core.persian.PersianTextView
                android:id="@+id/lblOrderAddress"
                android:text="@string/label_travel_status"
                style="@style/WrapContent" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>