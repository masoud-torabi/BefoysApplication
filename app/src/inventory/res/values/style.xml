<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BefoysStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="LineDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
    </style>

    <style name="Drawer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="DrawerContainer" parent="Drawer">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
        <item name="android:layoutDirection">rtl</item>
    </style>

    <style name="DrawerHeader">
        <item name="android:background">@color/primaryColor</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DrawerHeaderImage">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/default_margin_2x</item>
    </style>

    <style name="DrawerHeaderTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="NavigationDrawer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:textDirection">rtl</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomNavigationContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:layoutDirection">rtl</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:background">@color/primaryColor</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="StandardContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Overlay" parent="MatchParent">
        <item name="android:background">@color/overlay</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="FitWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Toolbar">
        <item name="android:background">@color/primaryColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:direction">right_to_left</item>
    </style>

    <style name="ToolbarContainer">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
    </style>

    <style name="ToolbarIcon">
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="ToolbarText">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/text_size_toolbar</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ToolbarTextCenter" parent="ToolbarText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="DrowerLogo">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Slider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ProgressbarContainer">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PageContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Form">
        <item name="android:layoutDirection">rtl</item>
        <item name="android:layout_marginRight">@dimen/default_margin_2x</item>
        <item name="android:layout_marginLeft">@dimen/default_margin_2x</item>
        <item name="android:layout_marginBottom">@dimen/default_margin_2x</item>
        <item name="android:paddingBottom">@dimen/default_padding</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FormFit">
        <item name="android:layoutDirection">rtl</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_margin_2x</item>
        <item name="android:paddingBottom">@dimen/default_padding</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FormTitle">
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/default_margin_2x</item>
    </style>

    <style name="FormGroup">
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="FormLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StandardLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
    </style>

    <style name="FormControl">
        <item name="android:background">@color/textbox_back_gray</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12dp</item>
        <item name="android:direction">right_to_left</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textDirection">rtl</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/primaryColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">@dimen/default_padding</item>
    </style>

    <style name="ButtonCalculator">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">@dimen/default_padding</item>
        <item name="android:layout_marginLeft">@dimen/default_margin_0_5</item>
        <item name="android:layout_marginRight">@dimen/default_margin_0_5</item>
    </style>

    <style name="ButtonPurple" parent="Button">
        <item name="android:background">@color/secondaryDarkColor</item>
    </style>

    <style name="OrderItem">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin_2x</item>
        <item name="android:layout_marginLeft">@dimen/default_margin_2x</item>
    </style>

    <style name="OrderStepItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layoutDirection">rtl</item>
    </style>

    <style name="OrderItemContent">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="OrderItemIcon">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/default_margin_0_5</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BasketItem">
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:layout_marginTop">@dimen/default_margin_2x</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>